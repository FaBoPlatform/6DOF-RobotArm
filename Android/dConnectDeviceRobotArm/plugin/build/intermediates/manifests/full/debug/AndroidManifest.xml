<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.deviceconnect.android.deviceplugin.robotarm"
    android:versionCode="1"
    android:versionName="1.0.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="26" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <uses-library android:name="com.google.android.things" />

        <!-- プラグイン本体サービス -->
        <service
            android:name="org.deviceconnect.android.deviceplugin.robotarm.MyMessageService"
            android:exported="true" >
            <meta-data
                android:name="org.deviceconnect.android.deviceplugin"
                android:resource="@xml/org_deviceconnect_android_deviceplugin_robotarm" />
        </service>

        <!-- Device Connect API リクエストのレシーバー -->
        <!--
            NOTE:  下記のレシーバーは、旧仕様のDevice Connect Managerとの互換性、
            およびDevice Connect Managerのアンインストール検知のために残しています.
        -->
        <receiver
            android:name="org.deviceconnect.android.deviceplugin.robotarm.MyMessageServiceProvider"
            android:enabled="true"
            android:exported="true" >
            <meta-data
                android:name="org.deviceconnect.android.deviceplugin"
                android:resource="@xml/org_deviceconnect_android_deviceplugin_robotarm" />

            <intent-filter>
                <action android:name="org.deviceconnect.action.GET" />
                <action android:name="org.deviceconnect.action.PUT" />
                <action android:name="org.deviceconnect.action.POST" />
                <action android:name="org.deviceconnect.action.DELETE" />

                <!-- uninstall notification -->
                <action android:name="android.intent.action.PACKAGE_FULLY_REMOVED" />

                <data android:scheme="package" />
            </intent-filter>
        </receiver>

        <!-- プラグイン設定画面 -->
        <activity android:name="org.deviceconnect.android.deviceplugin.robotarm.MySettingActivity" >

            <!-- TODO ランチャー画面に表示させたくない場合は、下記のインテントフィルタを削除。 -->
            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->
            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <!-- The following activities will be merged into a module that depends on this library. -->
        <activity
            android:name="org.deviceconnect.android.activity.IntentHandlerActivity"
            android:exported="false"
            android:theme="@style/Theme.Transparent" />
        <activity
            android:name="org.deviceconnect.android.activity.PermissionRequestActivity"
            android:exported="false"
            android:theme="@style/Theme.Dialog.Transparent" /> <!-- LocalOAuth -->
        <activity
            android:name="org.deviceconnect.android.localoauth.activity.ConfirmAuthActivity"
            android:excludeFromRecents="true"
            android:exported="false" />
        <activity
            android:name="org.deviceconnect.android.localoauth.activity.AccessTokenListActivity"
            android:excludeFromRecents="true"
            android:exported="false" />

        <meta-data
            android:name="org.deviceconnect.android.deviceplugin.sdk"
            android:resource="@xml/pluginsdk" />

        <receiver
            android:name="org.deviceconnect.message.DConnectMessageReceiver"
            android:exported="true" >
        </receiver>

        <meta-data
            android:name="android.support.VERSION"
            android:value="26.1.0" />
        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />
    </application>

</manifest>